<%= form_for @post, :class => 'new_form', :html => { :multipart => true } do |f| %>
  <div id="new_post_description_row">
    <%= f.label :description, :class => 'new_post_description' %>
    <%= f.text_area :description, :class => "new_post_description_label" %>
  </div>
  <div id="new_post_tags_row">
    <%= f.label :tag_names, :class => 'new_post_tags' %>
    <%= f.text_area :tag_names, :class => "new_post_tags_label" %>
  <p> </p>
  <div>
    <%= f.label :picture, :class => "new_post_picture_label" %>
    <%= f.file_field :picture, :class => "new_post_picture" %>
  </div>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>